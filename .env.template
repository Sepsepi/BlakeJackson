# Broward Pipeline Environment Configuration
# Copy this to .env and fill in your actual values

# Email Configuration (Gmail)
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Google Sheets Configuration
GOOGLE_SPREADSHEET_ID=your-google-sheets-id-here
GOOGLE_SERVICE_ACCOUNT_JSON=service-account.json

# Pipeline Configuration
BROWARD_OUTPUT_DIR=weekly_output
BROWARD_DAYS_BACK=7
BROWARD_BATCH_SIZE=9
BROWARD_HEADLESS=true
BROWARD_MAX_RETRIES=5
BROWARD_ENABLE_RADARIS_BACKUP=true
RADARIS_MAX_RECORDS=50

# Weekly Automation
BROWARD_WEEKLY_MODE=true
BROWARD_CLEANUP_OLD_FILES=true
